{
  "builds": [
    {
      "src": "./index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "TOKEN": "${YOUR_TELEGRAM_BOT_TOKEN}",
    "URL": "${YOUR_VERCEL_URL}"
  }
}
